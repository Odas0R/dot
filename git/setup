#!/usr/bin/env bash

DOT_GIT="$HOME/dot/git"

# TODO: Understand more about this -- Add git templates?
# git config --global init.templatedir '~/.git_templates'
# ln -sf "$PWD/git_templates" "$HOME/.git_templates"

if [[ $OSTYPE == "darwin"* ]]; then
  ln -sf "$DOT_GIT/gitconfig_darwin" "$HOME/.gitconfig"
else
  ln -sf "$DOT_GIT/gitconfig" "$HOME/.gitconfig"
fi

printf "Git setup done! ðŸŒŸ\n"
