#!/bin/sh

# a single directory where user data is stored, defaulting to ~/.local/share;

ln -sf "$PWD/bashrc" "$HOME/.bashrc"
ln -sf "$PWD/inputrc" "$HOME/.inputrc"
ln -sf "$PWD/bash" "$HOME/.bash"

[ -d "$HOME/.local/bin" ] || mkdir -p "$HOME/.local/bin"
ln -sf "$PWD/scripts" "$HOME/.local/bin/scripts"

printf "Executing all setup scripts âœ¨...\n"

folders="gh git vim tmux windows-terminal"

for path in $folders; do
  cd "$path" && ./setup
  cd - >/dev/null || exit 1
done

exit 0
