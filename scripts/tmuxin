#!/bin/sh

zetPath=$(markpath zet)
dndPath=$(markpath dnd)
goSSGPath=$(markpath go-ssg)

# Kill all the prev sessions
tmux kill-server

# Tags Explanation
# -c: path of the session
# -s: session name
# -n: window name
# -d: "detach"
# [args] '$': the $ can be a script/command to be executed

# Zettel Session
tmux new -c "$zetPath" -s zettel -n zettel -d \; split-window -hf -d 'daily'

# Drag&Drop Session
tmux new -c "$dndPath" -s $(basename $dndPath) -n server -d \; new-window -c "$dndPath" -d

# Go-ssg Session
tmux new -c "$goSSGPath" -s $(basename $goSSGPath) -n server -d
