#!/usr/bin/env bash

set -e

currentDate=$(date +"%Y-%m-%d")
file="${HOME}/zet/journal/${currentDate}.md"

if [ -f "$file" ]; then
  tmux popup -h80% -w50% -E nvim "$file"
else

  # Append the daily template on the file
  tee "$file" <<EOF >/dev/null
# Journal Entry, ${currentDate}

*Work so hard you want to quit every day.*
*Be so hard you never fucking quit.*


EOF

  # Open the daily file
  tmux popup -E nvim +6 "$file"
fi
