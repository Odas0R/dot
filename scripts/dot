#!/usr/bin/env bash

set -e

if [[ -n $1 ]]; then
  # find the files by regex & open them w/ vim
  find "$HOME/dot" -type f -name "*$1*" -exec nvim-nvr '{}' +
  exit 0
fi

cd "$HOME/dot"
file="$(fzf --preview 'bat --theme=ansi  --style=numbers --color=always {}')"

if [[ -f $file ]]; then
  if [[ ${file: -4} =~ (.png|jpeg|gif) ]]; then
    cd "$(dirname "$file")"
    open "$(basename "$file")"
    exit 0
  else
    nvim-nvr "$file"
  fi
fi
